<%- include('../partials/headerPartial.ejs') %> 

<form action="/books/<%= bookToEditReferenceForEJS._id %>?_method=PUT" method="POST">
    <label>Author:</label>
    <select name="performerId">
        <% allAuthorsReferenceForEJS.map(function(eachAuthor) { %>
            <option value="<%= eachAuthor._id %>"
                <% if(JSON.stringify(bookToEditReferenceForEJS.author) === JSON.stringify(eachAuthor._id)) { %>
                    selected
                <% } %>
            >
                <%= eachAuthor.name %>
            </option>
        <% }) %>
      </select><br>
    <label>Title:</label>
    <input type="text" name="title" value="<%= bookToEditReferenceForEJS.title %>"><br>
    <label>Year Published:</label>
    <input type="text" name="yearPublished" value="<%= bookToEditReferenceForEJS.yearPublished %>"><br>
    <label>Cover Image URL:</label>
    <input type="text" name="coverImageUrl" value="<%= bookToEditReferenceForEJS.coverImageUrl %>"><br>
    <input type="submit" value="Update Book">
</form>

<%- include('../partials/footerPartial.ejs') %> 